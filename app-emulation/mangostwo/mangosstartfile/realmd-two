Unit]
Description=mangosd-two service
Documentation=https://docs.gitea.io/

AssertPathIsDirectory=/opt/mangos/bin
AssertPathIsReadWrite=/opt/mangos/bin

After=network.target
Requires=network.target
After=mysqld.service
After=postgresql-9.5.service
After=postgresql-9.6.service
After=postgresql-10.service
After=postgresql-11.service
After=postgresql-12.service
After=postgresql-13.service
After=postgresql-14.service
After=memcached.service
After=redis.service

[Service]
User=mangos
Group=mangos

Environment="MANGOSD_WORK_DIR=/opt/mangos/bin" "MANGOSD_CUSTOM=/opt/mangos/bin/custom"
WorkingDirectory=/opt/mangos/bin
ExecStart=/usr/bin/realmd-two

Restart=always
PrivateTmp=true
Nice=5

[Install]
WantedBy=multi-user.target
